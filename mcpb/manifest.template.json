{
  "manifest_version": "0.3",
  "name": "ha-mcp",
  "version": "${VERSION}",
  "display_name": "Home Assistant MCP Server",
  "description": "Control and manage Home Assistant with natural language",
  "long_description": "Transform your Home Assistant into an AI-powered smart home with natural language control.\n\n**What you can do:**\n- Search and discover entities using fuzzy matching\n- Control lights, switches, covers, and climate devices\n- Create and manage automations and scripts\n- Query history, statistics, and system health\n- Organize areas, zones, and device groups\n\n80+ specialized tools give Claude complete access to your smart homeâ€”no YAML editing required.",
  "icon": "icon.png",
  "author": {
    "name": "Julien Larocque-Dupont",
    "email": "github@qc-h.net",
    "url": "https://github.com/julienld"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/homeassistant-ai/ha-mcp"
  },
  "homepage": "https://github.com/homeassistant-ai/ha-mcp",
  "documentation": "https://github.com/homeassistant-ai/ha-mcp#readme",
  "support": "https://github.com/homeassistant-ai/ha-mcp/issues",
  "license": "MIT",
  "keywords": [
    "home-assistant",
    "smart-home",
    "automation",
    "iot",
    "ai",
    "mcp",
    "claude",
    "home-automation",
    "voice-control",
    "natural-language"
  ],
  "privacy_policies": [
    "https://raw.githubusercontent.com/homeassistant-ai/ha-mcp/master/PRIVACY.md"
  ],
  "user_config": {
    "homeassistant_url": {
      "type": "string",
      "title": "Home Assistant URL",
      "description": "The URL of your Home Assistant instance (e.g., http://homeassistant.local:8123 or https://your-ha.duckdns.org)",
      "required": true
    },
    "homeassistant_token": {
      "type": "string",
      "title": "Long-Lived Access Token",
      "description": "Create a token in Home Assistant: Profile -> Security -> Long-Lived Access Tokens -> Create Token",
      "required": true,
      "sensitive": true
    }
  },
  "server": {
    "type": "binary",
    "entry_point": "ha-mcp${BINARY_EXT}",
    "mcp_config": {
      "command": "${__dirname}/ha-mcp${BINARY_EXT}",
      "args": [],
      "env": {
        "HOMEASSISTANT_URL": "${user_config.homeassistant_url}",
        "HOMEASSISTANT_TOKEN": "${user_config.homeassistant_token}"
      }
    }
  },
  "compatibility": {
    "platforms": ["${PLATFORM}"]
  },
  "tools": [
    { "name": "ha_search_entities", "description": "Fuzzy search for entities by name, area, or domain" },
    { "name": "ha_get_state", "description": "Get current state of an entity" },
    { "name": "ha_get_overview", "description": "Get AI-optimized system overview" },
    { "name": "ha_deep_search", "description": "Deep search across entities and attributes" },
    { "name": "ha_call_service", "description": "Call any Home Assistant service" },
    { "name": "ha_bulk_control", "description": "Control multiple devices at once" },
    { "name": "ha_get_operation_status", "description": "Check async operation status" },
    { "name": "ha_get_bulk_status", "description": "Check bulk operation status" },
    { "name": "ha_list_services", "description": "List available services" },
    { "name": "ha_config_get_automation", "description": "Get automation configuration" },
    { "name": "ha_config_set_automation", "description": "Create or update automation" },
    { "name": "ha_config_remove_automation", "description": "Delete an automation" },
    { "name": "ha_get_automation_traces", "description": "Get automation execution traces" },
    { "name": "ha_config_get_script", "description": "Get script configuration" },
    { "name": "ha_config_set_script", "description": "Create or update script" },
    { "name": "ha_config_remove_script", "description": "Delete a script" },
    { "name": "ha_config_list_helpers", "description": "List all helpers" },
    { "name": "ha_config_set_helper", "description": "Create or update helper" },
    { "name": "ha_config_remove_helper", "description": "Delete a helper" },
    { "name": "ha_config_list_areas", "description": "List all areas" },
    { "name": "ha_config_set_area", "description": "Create or update area" },
    { "name": "ha_config_remove_area", "description": "Delete an area" },
    { "name": "ha_config_list_floors", "description": "List all floors" },
    { "name": "ha_config_set_floor", "description": "Create or update floor" },
    { "name": "ha_config_remove_floor", "description": "Delete a floor" },
    { "name": "ha_list_zones", "description": "List all zones" },
    { "name": "ha_create_zone", "description": "Create a zone" },
    { "name": "ha_update_zone", "description": "Update a zone" },
    { "name": "ha_delete_zone", "description": "Delete a zone" },
    { "name": "ha_config_list_labels", "description": "List all labels" },
    { "name": "ha_config_get_label", "description": "Get label details" },
    { "name": "ha_config_set_label", "description": "Create or update label" },
    { "name": "ha_config_remove_label", "description": "Delete a label" },
    { "name": "ha_assign_label", "description": "Assign label to entity" },
    { "name": "ha_config_list_groups", "description": "List all groups" },
    { "name": "ha_config_set_group", "description": "Create or update group" },
    { "name": "ha_config_remove_group", "description": "Delete a group" },
    { "name": "ha_config_list_dashboards", "description": "List all dashboards" },
    { "name": "ha_config_get_dashboard", "description": "Get dashboard configuration" },
    { "name": "ha_config_set_dashboard", "description": "Create or update dashboard" },
    { "name": "ha_config_update_dashboard_metadata", "description": "Update dashboard metadata" },
    { "name": "ha_config_delete_dashboard", "description": "Delete a dashboard" },
    { "name": "ha_get_dashboard_guide", "description": "Get dashboard creation guide" },
    { "name": "ha_get_card_types", "description": "List available card types" },
    { "name": "ha_get_card_documentation", "description": "Get card documentation" },
    { "name": "ha_config_get_calendar_events", "description": "Get calendar events" },
    { "name": "ha_config_set_calendar_event", "description": "Create or update calendar event" },
    { "name": "ha_config_remove_calendar_event", "description": "Delete calendar event" },
    { "name": "ha_list_todo_lists", "description": "List all to-do lists" },
    { "name": "ha_get_todo_items", "description": "Get items from a to-do list" },
    { "name": "ha_add_todo_item", "description": "Add item to to-do list" },
    { "name": "ha_update_todo_item", "description": "Update to-do item" },
    { "name": "ha_remove_todo_item", "description": "Remove to-do item" },
    { "name": "ha_list_blueprints", "description": "List available blueprints" },
    { "name": "ha_get_blueprint", "description": "Get blueprint details" },
    { "name": "ha_import_blueprint", "description": "Import a blueprint from URL" },
    { "name": "ha_get_history", "description": "Get entity state history" },
    { "name": "ha_get_statistics", "description": "Get long-term statistics" },
    { "name": "ha_get_logbook", "description": "Get logbook entries" },
    { "name": "ha_eval_template", "description": "Evaluate a Jinja2 template" },
    { "name": "ha_get_domain_docs", "description": "Get documentation for a domain" },
    { "name": "ha_list_devices", "description": "List all devices" },
    { "name": "ha_get_device", "description": "Get device details" },
    { "name": "ha_update_device", "description": "Update device properties" },
    { "name": "ha_remove_device", "description": "Remove a device" },
    { "name": "ha_rename_entity", "description": "Rename an entity" },
    { "name": "ha_list_integrations", "description": "List installed integrations" },
    { "name": "ha_get_zha_devices", "description": "Get ZHA/Zigbee devices" },
    { "name": "ha_get_device_integration", "description": "Get device integration info" },
    { "name": "ha_check_config", "description": "Validate configuration" },
    { "name": "ha_restart", "description": "Restart Home Assistant" },
    { "name": "ha_reload_core", "description": "Reload core components" },
    { "name": "ha_get_system_info", "description": "Get system information" },
    { "name": "ha_get_system_health", "description": "Get system health status" },
    { "name": "ha_list_updates", "description": "List available updates" },
    { "name": "ha_get_release_notes", "description": "Get update release notes" },
    { "name": "ha_get_system_version", "description": "Get current version info" },
    { "name": "ha_list_addons", "description": "List installed add-ons" },
    { "name": "ha_list_available_addons", "description": "List available add-ons" },
    { "name": "ha_backup_create", "description": "Create a backup" },
    { "name": "ha_backup_restore", "description": "Restore from backup" },
    { "name": "ha_get_camera_image", "description": "Get camera snapshot image" }
  ],
  "tools_generated": false
}
